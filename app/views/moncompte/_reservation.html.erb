<%= bootstrap_form_with(model: reservation, url: create_visiteur_reservations_path) do |form| %>

  <p>
    <h2>
      <%= reservation.try(:enfant).try(:nom_et_prénom) %>
    </h2>
  </p>

  <%= form.hidden_field :enfant_id %>

  <%= form.select :enfant_id, options_from_collection_for_select(@compte.enfants, 'id', 'prénom', reservation.enfant_id), { label: 'Enfant', wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "selectpicker" } %>

  <%= form.select :prestation_type_id, options_from_collection_for_select(@compte.organisation.prestation_types, 'id', 'nom', reservation.prestation_type_id), { label: 'Prestation', wrapper: { class: 'has-warning', data: { foo: 'bar' } } }, { class: "selectpicker" } %>

  <div class="form-inline">
    <%= form.date_select :début, label: 'Du :', class: "form-control" %>
    <%= form.date_select :fin, label: 'Au :', class: "form-control" %>
  </div>
  
  <div class="row">
    <div class="col"><%= form.text_field :lundi %></div>
    <div class="col"><%= form.text_field :mardi %></div>
    <div class="col"><%= form.text_field :mercredi %></div>
    <div class="col"><%= form.text_field :jeudi %></div>
    <div class="col"><%= form.text_field :vendredi %></div>
  </div>

  <div class="custom-control">
    <%= form.check_box :matin, custom: :switch %>
    <%= form.check_box :midi, custom: :switch %>
    <%= form.check_box :soir, custom: :switch %>
  </div>
  <br />

  <%= form.submit "Enregistrer", class: "btn btn-success" %>

<% end %>