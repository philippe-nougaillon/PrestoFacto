<div class="container gap-2">
  <div class="row">
    <div class="col"><%= facture.réf %></div>
    <div class="col-4 text-end"><%= number_to_currency(facture.montant, unit: '€', precision: 2, format: '%n %u') %></div>
    <div class="col-2 text-end">
      <%= link_to facture_url(facture, format: :pdf), target: '_blank', title: "Voir la facture en PDF", class: 'btn btn-sm' do %>
        <i class="fas fa-2x fa-file-pdf text-danger"></i>
      <% end %>
    </div>
  </div>
</div>
<hr>