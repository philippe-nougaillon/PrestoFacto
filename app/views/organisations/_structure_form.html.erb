<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="row">
    <div class="col-sm-8">
      <%= f.text_field :nom, label_as_placeholder: true %>
    </div>
    <% unless f.object.classrooms.any? %>
      <div class="col">
        <a type="button" data-action="nested-form#remove"><%= fa_icon 'trash-alt', class:"text-danger mt-2" %></a>
      </div>
    <% end %>
  </div>
  <%= f.hidden_field :_destroy %>
</div>