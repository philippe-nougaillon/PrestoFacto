<h2>Changement de mot de passe</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: false, autocomplete: "new-password", class: 'col-sm-3' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'col-sm-3' %>
  </div>

  <div class="actions">
    <%= f.submit "Changer mon mot de passe", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
