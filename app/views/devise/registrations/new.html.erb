<h2>Inscription</h2>
<br>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", class: "form-control col-sm-3" %>

    <%= f.label :password %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />

    <%= f.password_field :password, required: true, hide_label: true, autocomplete: "new-password", class: "form-control col-sm-3" %>
    <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-control col-sm-3" %>
  
    <%= f.label :organisation %>
    <%= text_field_tag :organisation, params[:organisation], required: true, placeholder: "Le nom de votre ASSOCIATION/MARIE", class: "form-control col-sm-5" %>
    <br>
    
    <%= f.label :structure %>
    <%= text_field_tag :structure, params[:structure], required: true, placeholder: "Le nom d'une structure (CANTINE/GARDERIE/CENTRE DE LOISIRS/Etc.)", class: "form-control col-sm-6" %>
    <br>
    <p>
      <i><small>
        Ces informations servent à créer un premier jeu de données que vous pourrez ensuite modifier
      </small></i>
    </p>
    <br>

  </div>

  <div class="actions">
    <%= f.submit "S'incrire", class: "btn btn-primary btn-lg" %>
  </div>

  <p>
    <i><small>
      Un courriel va vous être envoyé afin de vérifier votre adresse email.
      Cliquez sur le lien fourni afin de confirmer votre adresse email et de vous connecter.
    </small></i>
  </p>

<% end %>
